<header>
  <a href="/"><h1 id="logo">Chitter</h1></a>
  <% if current_user %>
    <div id="logged-in">
    <form id="sign-out" method="post" action="/sessions">
      <input type="hidden" name="_method" value="delete">
      <input class="btn" type="submit" value="Sign out">
    </form>
    <a class="btn highlighted" href="/messages/new">Create message</a>
    </div>
  <% else %>
    <div id="log-in">
    <a class="btn" href="/users/new">Sign up</a>
    <a class="btn" href="/sessions/new">Sign in</a>
    </div>
  <% end %>
</header>